package accessmodifier;

public class Warrior {
	
	public int hp;
	public int strength;
	public String name;
	public int level;
	public int money;
	
	//constructor, name is input
	//hp 2 str 3 lvl 1 money 0
	public Warrior(String playerName) {
		hp = 20;
		strength = 3;
		level = 0;
		money = 0;
		name = playerName;
	}
	
	public void hunt() {
		hp -= 2;
		money += 10;
		System.out.println("체력#: " + hp + " 돈#: " + money);
	}
}
