package interaction;

public class Seller {
	private int money;
	private int mango;
	private int mango_price;
	
	public Seller(int mango) {
		this.money = 0;
		this.mango = mango;
		this.mango_price = 5;
	}
	
	public void showSeller() {
		System.out.println("Money: " + this.money
				+ '\n' + "Mango: " + this.mango);
	}
	
	public void sellMango(int mango){
		this.mango -= mango;
		this.money += (mango*this.mango_price); 
	}
}
